{
  "info": {
    "name": "AI E-commerce Platform API",
    "description": "Complete API collection for testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/products",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/search?q=laptop&minPrice=500&maxPrice=2000",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "laptop"
                },
                {
                  "key": "minPrice",
                  "value": "500"
                },
                {
                  "key": "maxPrice",
                  "value": "2000"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "AI Services",
      "item": [
        {
          "name": "Get Recommendations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/ai/recommendations/1?limit=5",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "ai", "recommendations", "1"],
              "query": [
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Dynamic Pricing",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/ai/pricing/1",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "ai", "pricing", "1"]
            }
          }
        },
        {
          "name": "Fraud Analysis",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1500.00,\n  \"location\": \"international\",\n  \"userId\": 1\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/ai/fraud/analyze",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "ai", "fraud", "analyze"]
            }
          }
        }
      ]
    },
    {
      "name": "Health & Monitoring",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/health",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "health"]
            }
          }
        },
        {
          "name": "Metrics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/actuator/metrics",
              "host": ["{{BASE_URL}}"],
              "path": ["actuator", "metrics"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:8080"
    }
  ]
}